{
  "name": "oriverk-docs",
  "version": "1.0.0",
  "description": "markdown repo for blog.oriverk.dev",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint . --cache",
    "lint:mdlint": "markdownlint ./**/*.{md,mdx} -i node_modules",
    "lint:textlint": "textlint ./**/*.mdx?",
    "fix": "run-s fix:eslint fix:mdlint fix:textlint",
    "fix:eslint": "eslint . --fix",
    "fix:mdlint": "markdownlint -f ./**/*.{md,mdx} -i node_modules",
    "fix:textlint": "textlint --fix ./**/*.mdx?",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/oriverk/oriverk-docs.git"
  },
  "keywords": [
    "markdown"
  ],
  "author": "oriverk",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oriverk/oriverk-docs/issues"
  },
  "homepage": "https://github.com/oriverk/oriverk-docs#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-plugin-markdown": "^3.0.0",
    "husky": "^8.0.3",
    "markdownlint-cli": "^0.33.0",
    "npm-run-all": "^4.1.5",
    "textlint": "^13.3.1",
    "textlint-rule-eslint": "^4.0.2",
    "textlint-rule-preset-ja-spacing": "^2.3.0",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "textlint-rule-preset-smarthr": "^1.22.0",
    "textlint-rule-spellcheck-tech-word": "^5.0.0"
  }
}
